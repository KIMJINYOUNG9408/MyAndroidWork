<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Main2Activity">

    <Button
        android:id="@+id/cal_btn9"
        android:layout_width="96dp"
        android:layout_height="110dp"
        android:layout_marginStart="2dp"
        android:layout_marginTop="24dp"
        android:backgroundTint="#91FFEB3B"
        android:text="9"
        android:textSize="40dp"
        app:layout_constraintStart_toEndOf="@+id/cal_btn8"
        app:layout_constraintTop_toTopOf="@+id/guideline2" />

    <Button
        android:id="@+id/cal_btnclear"
        android:layout_width="96dp"
        android:layout_height="110dp"
        android:layout_marginStart="5dp"
        android:layout_marginTop="2dp"
        android:backgroundTint="#412BEC01"
        android:text="C"
        android:textSize="40dp"
        app:layout_constraintStart_toStartOf="@+id/guideline"
        app:layout_constraintTop_toBottomOf="@+id/cal_btn1" />

    <Button
        android:id="@+id/cal_btn0"
        android:layout_width="96dp"
        android:layout_height="110dp"
        android:layout_marginStart="2dp"
        android:layout_marginTop="2dp"
        android:backgroundTint="#91FFEB3B"
        android:text="0"
        android:textSize="40dp"
        app:layout_constraintStart_toEndOf="@+id/cal_btnclear"
        app:layout_constraintTop_toBottomOf="@+id/cal_btn2" />

    <Button
        android:id="@+id/cal_btnanswer"
        android:layout_width="96dp"
        android:layout_height="110dp"
        android:layout_marginStart="2dp"
        android:layout_marginTop="2dp"
        android:backgroundTint="#412BEC01"
        android:text="="
        android:textSize="40dp"
        app:layout_constraintStart_toEndOf="@+id/cal_btn0"
        app:layout_constraintTop_toBottomOf="@+id/cal_btn3" />

    <Button
        android:id="@+id/cal_btnplus"
        android:layout_width="96dp"
        android:layout_height="110dp"
        android:layout_marginStart="2dp"
        android:layout_marginTop="2dp"
        android:backgroundTint="#4C00BCD4"
        android:text="+"
        android:textSize="40dp"
        app:layout_constraintStart_toEndOf="@+id/cal_btnanswer"
        app:layout_constraintTop_toBottomOf="@+id/cal_btnminus" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/guideline"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintGuide_percent="0.02" />

    <Button
        android:id="@+id/cal_btn7"
        android:layout_width="96dp"
        android:layout_height="110dp"
        android:layout_marginStart="5dp"
        android:layout_marginTop="24dp"
        android:backgroundTint="#91FFEB3B"
        android:text="7"
        android:textSize="40dp"
        app:layout_constraintStart_toStartOf="@+id/guideline"
        app:layout_constraintTop_toTopOf="@+id/guideline2" />

    <Button
        android:id="@+id/cal_btn8"
        android:layout_width="96dp"
        android:layout_height="110dp"
        android:layout_marginStart="2dp"
        android:layout_marginTop="24dp"
        android:backgroundTint="#91FFEB3B"
        android:text="8"
        android:textSize="40dp"
        app:layout_constraintStart_toEndOf="@+id/cal_btn7"
        app:layout_constraintTop_toTopOf="@+id/guideline2" />

    <Button
        android:id="@+id/cal_btndiv"
        android:layout_width="96dp"
        android:layout_height="110dp"
        android:layout_marginStart="2dp"
        android:layout_marginTop="24dp"
        android:backgroundTint="#4C00BCD4"
        android:text="÷"
        android:textSize="25dp"
        app:layout_constraintStart_toEndOf="@+id/cal_btn9"
        app:layout_constraintTop_toTopOf="@+id/guideline2" />

    <Button
        android:id="@+id/cal_btn4"
        android:layout_width="96dp"
        android:layout_height="110dp"
        android:layout_marginStart="5dp"
        android:layout_marginTop="2dp"
        android:backgroundTint="#91FFEB3B"
        android:text="4"
        android:textSize="40dp"
        app:layout_constraintStart_toStartOf="@+id/guideline"
        app:layout_constraintTop_toBottomOf="@+id/cal_btn7" />

    <Button
        android:id="@+id/cal_btn5"
        android:layout_width="96dp"
        android:layout_height="110dp"
        android:layout_marginStart="2dp"
        android:layout_marginTop="2dp"
        android:backgroundTint="#91FFEB3B"
        android:text="5"
        android:textSize="40dp"
        app:layout_constraintStart_toEndOf="@+id/cal_btn4"
        app:layout_constraintTop_toBottomOf="@+id/cal_btn8" />

    <Button
        android:id="@+id/cal_btn6"
        android:layout_width="96dp"
        android:layout_height="110dp"
        android:layout_marginStart="2dp"
        android:layout_marginTop="2dp"
        android:backgroundTint="#91FFEB3B"
        android:text="6"
        android:textSize="40dp"
        app:layout_constraintStart_toEndOf="@+id/cal_btn5"
        app:layout_constraintTop_toBottomOf="@+id/cal_btn9" />

    <Button
        android:id="@+id/cal_btnmul"
        android:layout_width="96dp"
        android:layout_height="110dp"
        android:layout_marginStart="2dp"
        android:layout_marginTop="2dp"
        android:backgroundTint="#4C00BCD4"
        android:text="×"
        android:textSize="40dp"
        app:layout_constraintStart_toEndOf="@+id/cal_btn6"
        app:layout_constraintTop_toBottomOf="@+id/cal_btndiv" />

    <Button
        android:id="@+id/cal_btn1"
        android:layout_width="96dp"
        android:layout_height="110dp"
        android:layout_marginStart="5dp"
        android:layout_marginTop="2dp"
        android:backgroundTint="#91FFEB3B"
        android:text="1"
        android:textSize="40dp"
        app:layout_constraintStart_toStartOf="@+id/guideline"
        app:layout_constraintTop_toBottomOf="@+id/cal_btn4" />

    <Button
        android:id="@+id/cal_btn2"
        android:layout_width="96dp"
        android:layout_height="110dp"
        android:layout_marginStart="2dp"
        android:layout_marginTop="2dp"
        android:backgroundTint="#91FFEB3B"
        android:text="2"
        android:textSize="40dp"
        app:layout_constraintStart_toEndOf="@+id/cal_btn1"
        app:layout_constraintTop_toBottomOf="@+id/cal_btn5" />

    <Button
        android:id="@+id/cal_btn3"
        android:layout_width="96dp"
        android:layout_height="110dp"
        android:layout_marginStart="2dp"
        android:layout_marginTop="2dp"
        android:backgroundTint="#91FFEB3B"
        android:text="3"
        android:textSize="40dp"
        app:layout_constraintStart_toEndOf="@+id/cal_btn2"
        app:layout_constraintTop_toBottomOf="@+id/cal_btn6" />

    <Button
        android:id="@+id/cal_btnminus"
        android:layout_width="96dp"
        android:layout_height="110dp"
        android:layout_marginStart="2dp"
        android:layout_marginTop="2dp"
        android:backgroundTint="#4C00BCD4"
        android:text="－"
        android:textSize="40dp"
        app:layout_constraintStart_toEndOf="@+id/cal_btn3"
        app:layout_constraintTop_toBottomOf="@+id/cal_btnmul" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/guideline2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintGuide_begin="120dp" />

    <EditText
        android:id="@+id/cal_result"
        android:layout_width="0dp"
        android:layout_height="88dp"
        android:layout_marginStart="14dp"
        android:layout_marginTop="5dp"
        android:ems="10"
        android:gravity="right"
        android:inputType="textPersonName"
        android:textSize="30dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="@+id/guideline"
        app:layout_constraintTop_toBottomOf="@+id/ds" />

    <TextView
        android:id="@+id/ds"
        android:layout_width="0dp"
        android:layout_height="40dp"
        android:layout_marginTop="10dp"
        android:hint=" 계산기"
        android:textSize="30sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>